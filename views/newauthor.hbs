<div class="row">
  <div class="col s12">
    <div class="card-panel indigo lighten-1">
      <h3 class="add-book-title center-align white-text">Add an Author</h3>
    </div>
  </div>
</div>

<div class="row">
  <form class="col s12" action="/newauthor" method="post">
    <div class="row">
      <div class="input-field col s6">
        <input name="first_name" id="first_name" type="text" class="validate">
        <label for="first_name">First Name</label>
      </div>
      <div class="input-field col s6">
        <input name="last_name" id="last_name" type="text" class="validate">
        <label for="last_name">Last Name</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <textarea name="description" id="description" class="materialize-textarea" class="validate"></textarea>
        <label for="description">Description</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <input disabled id="author-book" type="text" class="validate">
        <label for="author-book">Book</label>
      </div>
      <div class="input-field col s6">
        <input name="portrait_url" id="portrait_url" type="text" class="validate">
        <label for="portrait_url">Cover URL</label>
      </div>
    </div>
    <button type="submit" class="waves-effect waves-light btn-large indigo lighten-2 hoverable">Submit New Book</button>
  </form>
</div>
