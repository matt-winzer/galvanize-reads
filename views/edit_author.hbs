<div class="row">
  <div class="col s12">
    <div class="card-panel indigo lighten-1">
      <h3 class="edit-book-title center-align white-text">Edit: {{this.first_name}} {{this.last_name}}</h3>
    </div>
  </div>
</div>

<div class="row">
  <form class="col s12" action="/authors/{{id}}/edit?_method=put" method="post">
    <div class="row">
      <div class="input-field col s6">
        <input name="first_name" id="first_name" type="text" 1class="validate" value="{{this.first_name}}">
        <label for="first_name">First Name</label>
      </div>
      <div class="input-field col s6">
        <input name="last_name" id="last_name" type="text" class="validate" value="{{this.last_name}}">
        <label for="last_name">Last Name</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <textarea name="biography" id="biography" class="materialize-textarea" class="validate">{{this.biography}}</textarea>
        <label for="biography">Biography</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <input disabled id="author-book" type="text" class="validate">
        <label for="author-book">Book</label>
      </div>
      <div class="input-field col s6">
        <input name="portrait_url" id="portrait_url" type="text" class="validate" value="{{this.portrait_url}}">
        <label for="portrait_url">Portrait URL</label>
      </div>
    </div>
    <button type="submit" class="waves-effect waves-light btn-large indigo lighten-2 hoverable">Submit Edits</button>
  </form>
</div>
