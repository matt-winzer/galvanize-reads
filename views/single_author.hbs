{{#each reformatted}}

<div class="row">

    <div class="col s12">
      <div class="card horizontal">
        <div class="card-image">
          <img class="author-portrait"src="{{this.author_portrait_url}}">
        </div>
        <div class="card-stacked">
          <div class="card-content">
            <h3 class="author-name">{{this.author_first_name}} {{this.author_last_name}}</h3>
            <p class="book-description">{{this.author_biography}}</p>
            <br>
            <p>Books:</p>
            <br>
            {{#each this.books}}
              <a href="/books/{{this.book_id}}"><p class="author-books">{{this.book_title}}</p></a>
            {{/each}}
          </div>
          <div class="card-action">
            <a href="/authors/{{this.author_id}}/edit">Edit</a>
            <a href="#modal1">Delete</a>
          </div>
        </div>
      </div>
    </div>

</div>

<!-- Modal Structure -->
<div id="modal1" class="modal indigo lighten-1">
  <div class="modal-content white-text">
    <h4>Delete: {{this.author_first_name}} {{this.author.last_name}}?</h4>
    <h5>Are you sure?</h5>
  </div>
  <div class="modal-footer">
    <form class="delete-button" action="/authors/{{this.author_id}}?_method=delete" method="post">
      <button id="delete-button" class="waves-effect waves-light btn indigo lighten-2" type="submit" name="delete-button">Delete</button>
    </form>
      <button id="delete-cancel" class="waves-effect waves-light btn indigo lighten-2">Cancel</button>
  </div>
</div>

{{/each}}
