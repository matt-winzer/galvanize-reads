{{#each reformatted}}

<div class="row">

    <div class="col s12">
      <div class="card horizontal">
        <div class="card-image">
          <img class="book-cover"src="{{this.book_cover_url}}">
        </div>
        <div class="card-stacked">
          <div class="card-content">
            <h3 class="book-title">{{this.book_title}}</h3>
            <h5 class="book-genre">Genre: {{this.book_genre}}</h5>
            <span>Author(s): </span><span class="book-authors">{{#each this.authors}}{{this.first_name}} {{this.last_name}} {{/each}}</span>
            <br></br>
            <p class="book-description">{{this.book_description}}</p>
          </div>
          <div class="card-action">
            <a href="/books/{{this.book_id}}/edit">Edit</a>
            <a href="#modal1">Delete</a>
          </div>
        </div>
      </div>
    </div>

</div>

<!-- Modal Structure -->
<div id="modal1" class="modal indigo lighten-1">
  <div class="modal-content white-text">
    <h4>Delete: {{this.book_title}}?</h4>
    <h5>Are you sure?</h5>
  </div>
  <div class="modal-footer">
    <form class="delete-button" action="/books/{{this.book_id}}?_method=delete" method="post">
      <button id="book-delete-button" class="waves-effect waves-light btn indigo lighten-2 hoverable" type="submit" name="delete-button">Delete</button>
    </form>
      <button id="book-delete-cancel" class="waves-effect waves-light btn indigo lighten-2">Cancel</button>
  </div>
</div>

{{/each}}
