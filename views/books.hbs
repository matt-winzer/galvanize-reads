<div class="row">
  <div class="col s6 button-container">
    <a id="add-book-button" href="/books/new" class="waves-effect waves-light btn-large indigo lighten-2 hoverable">Add Book</a>
  </div>
  <div class="col s6 button-container">
    <a id="add-author-button" class="waves-effect waves-light btn-large indigo lighten-2 hoverable">Add Author</a>
  </div>
</div>

<div class="row">

  {{#each reformatted}}
    <div class="col s12">
      <div class="card horizontal">
        <div class="card-image">
          <img class="book-cover"src="{{this.book_cover_url}}">
        </div>
        <div class="card-stacked">
          <div class="card-content">
            <h3 class="book-title">{{this.book_title}}</h3>
            <h5 class="book-genre">Genre: {{this.book_genre}}</h5>
            <span>Author(s): </span><span class="book-authors">{{#each this.authors}}{{this.first_name}} {{this.last_name}} {{/each}}</span>
            <br></br>
            <p class="book-description">{{this.book_description}}</p>
          </div>
          <div class="card-action">
            <a href="/books/{{this.book_id}}">Details</a>
          </div>
        </div>
      </div>
    </div>
  {{/each}}

</div>
